<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sq.dao.EmployeeDao">
    <resultMap id="employeeMap" type="com.sq.pojo.Employee">
        <id property="id" column="e_id"></id>
        <result property="name" column="e_name"></result>
        <result property="salary" column="salary"></result>
        <collection property="departments" ofType="com.sq.pojo.Department">
            <id property="id" column="id"></id>
            <result property="name" column="name"></result>
            <result property="location" column="location"></result>
        </collection>
    </resultMap>
    <select id="findById1" resultMap="employeeMap">
        SELECT te.id as e_id,te. name as e_name ,te.salary,td.id,td.name,td.location
        FROM t_department td
        INNER JOIN t_employee te
        ON td.id = te.dept_id
        where te.id =#{id}

    </select>
</mapper>